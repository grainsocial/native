{
  "lexicon": 1,
  "id": "social.grain.actor.getActorFavs",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get a view of an actor's favorite galleries. Does not require auth.",
      "parameters": {
        "type": "params",
        "required": ["actor"],
        "properties": {
          "actor": { "type": "string", "format": "at-identifier" },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 50
          },
          "cursor": { "type": "string" }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["items"],
          "properties": {
            "cursor": { "type": "string" },
            "items": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "social.grain.gallery.defs#galleryView"
              }
            }
          }
        }
      }
    }
  }
}
